{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
